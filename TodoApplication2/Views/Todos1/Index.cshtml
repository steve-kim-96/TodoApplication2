@model TodoApplication2.Models.TodoTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Todos1" asp-action="Index" method="get">
    <p>
        <select asp-for="TodoType" asp-items="Model.Types">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Todos[0].Title)
            </th>            <th>
                @Html.DisplayNameFor(model => model.Todos[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todos[0].DoneByDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todos[0].IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todos[0].Difficulty)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Todos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoneByDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>            <td>
                @Html.DisplayFor(modelItem => item.Difficulty)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
